<UserControl x:Class="_2nd_project.classes.BookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="220" Width="420"
             FlowDirection="LeftToRight">
    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#4DB6AC"/>
        <SolidColorBrush x:Key="CardBackground" Color="#E0F2F1"/>
        <SolidColorBrush x:Key="Muted" Color="#00695C"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#004D40"/>



        <Style x:Key="LabelTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="{StaticResource Muted}"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>

        <Style x:Key="LabelValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Foreground" Value="{StaticResource TitleBrush}"/>
        </Style>

        <Style x:Key="StatusPill" TargetType="Border">
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Background" Value="#B2DFDB"/>
            <Setter Property="BorderBrush" Value="#4DB6AC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsBorrowed}" Value="True">
                    <Setter Property="Background" Value="#FFCDD2"/>
                    <Setter Property="BorderBrush" Value="#E57373"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border x:Name="Card"
            BorderBrush="{StaticResource CardBorderBrush}"
            BorderThickness="3"
            Background="{StaticResource CardBackground}"
            CornerRadius="15"
            Padding="20"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,16,0">
                <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" 
                           FontFamily="Segoe UI Semibold"
                           Foreground="{StaticResource TitleBrush}" TextWrapping="Wrap"/>

                <StackPanel Margin="0,12,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Style="{StaticResource LabelTitle}" Text="שפה:" Width="90"/>
                        <TextBlock Style="{StaticResource LabelValue}" Text="{Binding Language}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Style="{StaticResource LabelTitle}" Text="עמודים:" Width="90"/>
                        <TextBlock Style="{StaticResource LabelValue}" Text="{Binding Pages}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Style="{StaticResource LabelTitle}" Text="הושאל ב:" Width="90"/>
                        <TextBlock Style="{StaticResource LabelValue}" Text="{Binding BorrowDate, StringFormat=\{0:dd/MM/yyyy\}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Style="{StaticResource LabelTitle}" Text="הוחזר ב:" Width="90"/>
                        <TextBlock Style="{StaticResource LabelValue}" Text="{Binding ReturnDate, StringFormat=\{0:dd/MM/yyyy\}}"/>
                    </StackPanel>
                </StackPanel>

                <Border Style="{StaticResource StatusPill}">
                    <TextBlock FontSize="14" FontWeight="Bold" Foreground="#004D40" TextAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="פנוי"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBorrowed}" Value="True">
                                        <Setter Property="Text" Value="מושאל"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
            </StackPanel>

            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="{Binding ImagePath}" Width="140" Height="190" Stretch="UniformToFill" >
                    <Image.Clip>
                        <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,140,190"/>
                    </Image.Clip>
                </Image>
            </Grid>
        </Grid>
    </Border>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="MouseEnter">
            <BeginStoryboard>
                <Storyboard>
                    <ColorAnimation Storyboard.TargetName="Card"
                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                    To="#00796B" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="MouseLeave">
            <BeginStoryboard>
                <Storyboard>
                    <ColorAnimation Storyboard.TargetName="Card"
                                    Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                    To="#4DB6AC" Duration="0:0:0.3"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>
